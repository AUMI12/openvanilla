\f1 \cf0 	sudo rm -rf /Library/Components/OVLoader.bundle\
	sudo rm -rf /Library/OpenVanilla/0.6.3\
	sudo rm -rf ~/Library/OpenVanilla/0.6.3\
	sudo rm -rf /Library/PreferencePanes/OVPrefPane*\
