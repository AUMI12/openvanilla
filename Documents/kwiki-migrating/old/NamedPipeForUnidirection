* Server.cpp
 #include <iostream>
 #include <fstream>
 #include <string>
 
 // for umask() and mkfifo()
 #include <sys/types.h>
 #include <sys/stat.h>
 
 using namespace std;
 
 int main()
 {
         umask(0);
         int returnValue = mkfifo("/tmp/pipe", 0666);
 
         if(returnValue == 0)
         {
                 ifstream in("/tmp/pipe");
                 string outputString("");
                 while(in >> outputString)
                 {
                         cout << "> " + outputString << endl;
                         if(outputString == "/quit")
                                 break;
                 }
                 in.close();
         }
         else
                 cout << "mkfifo failed." << endl;
 
         return 0;
 }

----

* Client.cpp
 #include <iostream>
 #include <fstream>
 #include <string>
 
 using namespace std;
 
 int main()
 {
         string inputString("");
 
         ofstream out("/tmp/pipe");
         while(cin >> inputString)
         {
                 out << inputString << endl;
                 if(inputString == "/quit")
                         break;
         }
         out.close();
 
         return 0;
 }
